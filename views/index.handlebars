<h1 class="text-center">Burger Time!</h1>

<div class="row">

  <div id="undevoured" class="col-sm-6">

    <h2 class="text-center">Want a burger?</h2>

    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div id="devoured" class="col-sm-6">

    <h2 class="text-center">Burgers been eaten</h2>

    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>

<hr>


<div class="row text-center">

  <div id="add-div" class="col-sm-12">

<h2>Add a new burger to the menu</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

  </div>

</div>